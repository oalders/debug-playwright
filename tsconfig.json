{
  "compilerOptions": {
    "target": "es5",         // Specify ECMAScript target version
    "module": "commonjs",    // Specify module code generation
    "outDir": "./dist",      // Specify output directory
    "rootDir": "./src",      // Specify root directory of source files
    "strict": true,          // Enable all strict type-checking options
    "moduleResolution": "node", // Resolve modules using Node.js style
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "declaration": true,     // Generates corresponding '.d.ts' file
    "removeComments": true   // Remove comments in TypeScript
  },
  "include": ["src/**/*.ts"], // The glob patterns that TypeScript should include in compilation
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}